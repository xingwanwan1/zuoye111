<!doctype html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Document</title>
</head>
<body>
	<p>项目</p>
	<ul>
		 <%for(var i=0;i<name.length;i++){%>
			<li class="btn" data-id=<%=name[i].ID%> ><%=name[i].name%> </li>
		<%}%> 
		<input type="text" name="ID" class="textID">
		<input type="text" name="username" class="user">
		<button id="tian">添加</button>
		<div id="result1"></div>
	</ul>
	<script src="jquery-1.8.3.min.js"></script>
	<script>
		$("#tian").on("click",=>{
			const ID=$(".textID").val(),
					name=$(".user").val();
			$.ajax({
				url:"/tianjia",
				type:"post",
				data:{ID:ID,name:name},
				success:(msg)=>{
					if(msg.code==0){
						window.location.reload()
					}
				}
			})
		})
		$(".btn").on("click",=>{
			const id=$(this).attr("data-id")
			$.ajax({
				url:"/xia",
				type:"post",
				data:{ID:id},
				success:(msg)=>{
					window.location.href="/xianame?id="+id
				}
			})
		})
	</script>
</body>
</html>