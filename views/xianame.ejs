<!doctype html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Document</title>
	<style>
		#con{
			height: 780px;
			width: 50%;
			display: block;
			float: right;
			text-align: center;
		}
		#content{
			height: 780px;
			float: left;
			width: 50%;
		}
		#box{
			width: 100%;
			height: 780px;
			
		}
	</style>
</head>
<body>
		<div id="box">
			<div id="con">访问量<span id="red"></span></div>
			<div id="content">	
			<div>
		</div>
		<script src="jquery-1.8.3.min.js"></script>
		<script>
			const id=location.search.split("=")[1]
			$.ajax({
				url:"/xia",
				type:"post",
				data:{ID:id},
				success:(data)=>{
					$("#content").text(data[0].xianame)
					if (localStorage[id]){
			            localStorage[id]=Number(localStorage[id])+1;
			         }else{
			          	localStorage[id]=1;
			         }
		     		 $("#red").text(localStorage[id]);
				}
			})
		</script>
</body>
</html>